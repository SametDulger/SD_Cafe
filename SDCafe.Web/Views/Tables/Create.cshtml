@model SDCafe.Entities.Table

@{
    ViewData["Title"] = "Yeni Masa";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Yeni Masa Ekle</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="TableNumber" class="form-label">Masa Numarası</label>
                        <input asp-for="TableNumber" class="form-control" />
                        <span asp-validation-for="TableNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Capacity" class="form-label">Kapasite</label>
                        <input asp-for="Capacity" class="form-control" type="number" min="1" max="20" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                        <div class="form-text">Masanın kaç kişilik olduğunu belirtin (1-20 arası)</div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Bilgi</h5>
            </div>
            <div class="card-body">
                <p><strong>Masa Ekleme Kuralları:</strong></p>
                <ul>
                    <li>Masa numarası zorunludur</li>
                    <li>Masa numarası benzersiz olmalıdır</li>
                    <li>Kapasite 1-20 kişi arasında olmalıdır</li>
                    <li>Yeni masa varsayılan olarak boş durumda olur</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 