@model SDCafe.Entities.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Kategori Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Dikkat!</h4>
    <p>Bu kategoriyi silmek istediğinizden emin misiniz?</p>
    <hr>
    <p class="mb-0">Kategori silinmeyecek, sadece arşivlenecektir. Bu işlem geri alınabilir.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Kategori Adı:</strong> @Model.Name</p>
                <p><strong>Açıklama:</strong> @(string.IsNullOrEmpty(Model.Description) ? "Açıklama yok" : Model.Description)</p>
            </div>
            <div class="col-md-6">
                <p><strong>Oluşturulma Tarihi:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                @if (Model.UpdatedDate.HasValue)
                {
                    <p><strong>Son Güncelleme:</strong> @Model.UpdatedDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                }
                <p><strong>Durum:</strong> 
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ? "Aktif" : "Pasif")
                    </span>
                </p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> İptal
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Sil
                </button>
            </div>
        </form>
    </div>
</div> 