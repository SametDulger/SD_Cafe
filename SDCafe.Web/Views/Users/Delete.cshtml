@model SDCafe.Entities.User

@{
    ViewData["Title"] = "Kullanıcı Sil";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Kullanıcı Sil</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Dikkat!</h4>
    <p>Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
</div>

<div class="card">
    <div class="card-header">
        <h5>@Model.FirstName @Model.LastName</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>Ad:</strong> @Model.FirstName</p>
                <p><strong>Soyad:</strong> @Model.LastName</p>
                <p><strong>E-posta:</strong> @Model.Email</p>
                <p><strong>Rol:</strong> <span class="badge bg-primary">@Model.Role</span></p>
            </div>
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
                }
                <p><strong>Durum:</strong> 
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Aktif</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pasif</span>
                    }
                </p>
                <p><strong>Oluşturulma:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a asp-action="Index" class="btn btn-secondary me-md-2">İptal</a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Sil
        </button>
    </div>
</form> 